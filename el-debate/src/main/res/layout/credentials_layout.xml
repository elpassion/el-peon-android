<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/debateCredentialsFirstNameInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/debate_comment_credentials_first_name_hint"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/debateCredentialsLastNameInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/debate_comment_credentials_last_name_hint"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>