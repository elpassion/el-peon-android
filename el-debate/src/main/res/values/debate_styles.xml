<resources>

    <style name="AppThemeGreenWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorPrimaryGreen</item>
        <item name="colorControlNormal">@color/textUnderline</item>
    </style>

    <style name="EL_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorPrimaryGreen</item>
        <item name="colorControlNormal">@color/textUnderline</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="HintGrey">
        <item name="colorAccent">@color/greyHint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyHint</item>
    </style>

    <style name="DebateAnswerText">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
