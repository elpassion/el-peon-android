<resources>

    <style name="AppThemeDebate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDebate</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDebate</item>
        <item name="colorAccent">@color/colorAccentDebate</item>
        <item name="colorControlNormal">@color/textUnderline</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="HintDebate">
        <item name="colorAccent">@color/hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="HintChat">
        <item name="colorAccent">@color/greyLightText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/greyLightText</item>
    </style>

    <style name="DebateAnswerText">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
