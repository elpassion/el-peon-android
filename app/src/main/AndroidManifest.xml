<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.elpassion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".elspace.ElSpaceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".elspace.launcher.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".elspace.hub.login.HubLoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="pl.elpassion.elspace.hub.project.choose.ProjectChooseActivity"
            android:theme="@style/AppThemeWithoutActionBar" />
        <activity
            android:name=".elspace.hub.report.add.ReportAddActivity"
            android:theme="@style/AppThemeWithoutActionBar" />
        <activity
            android:name=".elspace.hub.report.list.ReportListActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemeWithoutActionBar" />
        <activity
            android:name=".elspace.hub.report.edit.ReportEditActivity"
            android:theme="@style/AppThemeWithoutActionBar" />
        <activity android:name="pl.elpassion.elspace.debate.login.DebateLoginActivity" />
        <activity android:name="pl.elpassion.elspace.debate.details.DebateDetailsActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="42505f6356175462de2327f99393bf1fdf054841" />
    </application>

</manifest>