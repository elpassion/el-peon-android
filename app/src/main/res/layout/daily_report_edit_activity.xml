<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportEditCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/DayHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_edit_date_header" />

    <TextView
        android:id="@+id/reportEditDate"
        style="@style/ReportContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:text="2016-09-01" />

    <TextView
        android:id="@+id/reportEditSaveButton"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_edit_save_button" />

</android.support.design.widget.CoordinatorLayout>