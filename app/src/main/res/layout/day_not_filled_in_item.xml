<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/report_row_edge_margin"
    android:layout_marginRight="@dimen/report_row_edge_margin"
    android:background="@drawable/click_indicator_white">

    <View
        android:id="@+id/hubIndicator"
        style="@style/HubIndicator"
        android:layout_marginEnd="10dp"
        android:background="@color/missingIndicator" />

    <TextView
        android:id="@+id/dayNumber"
        style="@style/DayName"
        android:layout_width="@dimen/report_left_space"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        tools:text="10 Thu" />

    <TextView
        style="@style/DayHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ico_hub_plus_active"
        android:text="@string/report_missing"
        android:textColor="@color/reportMissing" />

</LinearLayout>