<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_indicator_white"
    android:orientation="horizontal">

    <View
        android:id="@+id/hubIndicator"
        style="@style/HubIndicator"
        android:background="@color/filledIndicator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/report_left_space"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/reportHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/reportHeader"
            tools:text="4.0 - El Passion Design" />

        <TextView
            android:id="@+id/reportContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="El Passion Website Design" />

    </LinearLayout>
</LinearLayout>