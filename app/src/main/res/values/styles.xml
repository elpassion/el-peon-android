<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DayName">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/default_padding_value</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="DayHeader">
        <item name="android:paddingBottom">@dimen/default_padding_value</item>
        <item name="android:paddingTop">@dimen/default_padding_value</item>
        <item name="android:paddingEnd">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
