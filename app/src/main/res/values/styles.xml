<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DayName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DayHeader">
        <item name="android:paddingBottom">@dimen/default_padding_value</item>
        <item name="android:paddingTop">@dimen/default_padding_value</item>
        <item name="android:paddingEnd">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="ReportHeader">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">@dimen/default_padding_value</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/reportHeaderContent</item>
        <item name="android:background">@color/reportHeaderCell</item>
    </style>

    <style name="ReportContent">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProjectContent">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="HubIndicator">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">3dp</item>
    </style>
</resources>
