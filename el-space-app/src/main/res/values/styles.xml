<resources>

    <style name="AppThemeSpace" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimarySpace</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSpace</item>
        <item name="colorAccent">@color/colorAccentSpace</item>
        <item name="colorControlNormal">@color/textUnderline</item>
    </style>

    <style name="AppThemeSpace_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimarySpace</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSpace</item>
        <item name="colorAccent">@color/colorAccentSpace</item>
        <item name="colorControlNormal">@color/textUnderline</item>
    </style>

    <style name="DayName">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DayHeader">
        <item name="android:paddingBottom">@dimen/default_padding_value</item>
        <item name="android:paddingTop">@dimen/default_padding_value</item>
        <item name="android:paddingEnd">@dimen/default_padding_value</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="ProjectContent">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="HubIndicator">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">2dp</item>
    </style>

</resources>
