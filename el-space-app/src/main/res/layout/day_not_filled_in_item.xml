<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/report_row_edge_margin"
    android:layout_marginRight="@dimen/report_row_edge_margin"
    android:layout_marginTop="-3dp"
    android:background="@drawable/click_indicator_white">

    <View
        android:id="@+id/hubIndicator"
        style="@style/HubIndicator"
        android:background="@color/missingIndicator" />

    <TextView
        android:id="@+id/dayNumber"
        style="@style/DayName"
        android:layout_width="@dimen/report_left_space"
        android:layout_height="wrap_content"
        tools:text="10 Thu" />

    <TextView
        android:id="@+id/missingDayInformation"
        style="@style/DayHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/report_missing"
        android:textColor="@color/reportMissing" />

    <ImageView
        android:id="@+id/icoHubPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_padding_value"
        android:layout_marginRight="@dimen/default_padding_value" />

</LinearLayout>