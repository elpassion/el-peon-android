<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hubLoginCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="10000dp"
        android:layout_height="10000dp"
        android:background="#a0000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/googleLoginError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/google_login_error"
            android:padding="@dimen/default_padding_value"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/googleTokenError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/google_token_error"
            android:padding="@dimen/default_padding_value"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/googleDismissErrorButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@android:string/ok"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>