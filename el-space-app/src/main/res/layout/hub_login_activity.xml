<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hubLoginCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hub.login.GoogleHubLoginActivity">

    <View
        android:layout_width="1000dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/googleLoginError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_value"
            android:text="@string/google_login_error"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/googleTokenError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_value"
            android:text="@string/google_token_error"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/googleDismissErrorButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@android:string/ok"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>